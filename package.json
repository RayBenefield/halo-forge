{
    "name": "halo-forge",
    "description": "An aggregation of news, resources, tools, etc. for the Halo Forge community.",
    "version": "0.0.2",
    "homepage": "https://github.com/RayBenefield/halo-forge",
    "author": {
        "name": "Raymond Benefield",
        "email": "raymond.benefield@wellsfargo.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/RayBenefield/halo-forge.git"
    },
    "bugs": {
        "url": "https://github.com/RayBenefield/halo-forge/issues"
    },
    "license": "MIT",
    "main": "src/halo-forge.js",
    "engines": {
        "node": ">= 0.10.26",
        "npm": ">=1.4.3"
    },
    "scripts": {
        "dev": "webpack-dev-server --hot --inline",
        "test": "jest --watch",
        "lint": "eslint -c .eslintrc.json src/",
        "build": "webpack -p",
        "clean": "rimraf dist",
        "deploy": "yarn run build && gh-pages -d build",
        "patch": "npm version patch -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "minor": "npm version minor -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "major": "npm version major -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit"
    },
    "dependencies": {
        "babel-preset-react": "^6.16.0",
        "config": "^1.21.0",
        "cross-env": "^3.1.3",
        "react": "^15.4.1",
        "react-dom": "^15.4.1",
        "underscore": "^1.8.3",
        "underscore.string": "^2.4.0"
    },
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-core": "^6.20.0",
        "babel-jest": "^17.0.2",
        "babel-loader": "^6.2.10",
        "babel-polyfill": "^6.16.0",
        "babel-preset-es2015": "^6.18.0",
        "babel-register": "^6.18.0",
        "eslint": "^3.2.2",
        "eslint-config-airbnb": "^12.0.0",
        "eslint-plugin-import": "^1.16.0",
        "eslint-plugin-jsx-a11y": "^2.2.3",
        "eslint-plugin-react": "^6.3.0",
        "file-loader": "^0.9.0",
        "gh-pages": "^0.12.0",
        "gulp": "^3.9.1",
        "gulp-cached": "^1.1.0",
        "gulp-debug": "^2.1.2",
        "gulp-if": "^2.0.1",
        "gulp-notify": "^2.2.0",
        "gulp-plumber": "^1.1.0",
        "gulp-shell": "^0.5.2",
        "jest": "^17.0.3",
        "js-beautify": "^1.6.4",
        "react-hot-loader": "^1.3.1",
        "rimraf": "^2.5.4",
        "webpack": "^1.14.0",
        "webpack-dev-server": "^1.16.2"
    },
    "babel": {
        "presets": [
            "es2015",
            "react"
        ]
    },
    "jest": {
        "notify": true,
        "rootDir": "src",
        "testEnvironment": "node"
    }
}
