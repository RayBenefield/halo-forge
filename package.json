        "gulp-plumber": "^1.1.0",
        "gulp-shell": "^0.5.2",
        "image-webpack-loader": "^3.1.0",
        "jest": "^17.0.3",
        "js-beautify": "^1.6.4",
        "json-loader": "^0.5.4",
        "react-hot-loader": "^1.3.1",
        "rimraf": "^2.5.4",
        "style-loader": "^0.13.1",
        "webpack": "beta",
        "webpack-dev-server": "beta"
    },
    "babel": {
        "presets": [
            [
                "es2015",
                {
                    "modules": false
                }
            ],
            "react"
        ]
    },
    "jest": {
        "notify": true,
        "rootDir": "src",
        "testEnvironment": "node"
    }
